<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/option1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:onClick="onClick"
                    android:background="@drawable/round_corner"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/optionTV1"
                        android:layout_width="match_parent"
                        android:text="@string/Strengthening"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp"
                        android:paddingStart="5dp"
                        android:background="@color/colorAccent"/>
                    <ImageView
                        android:id="@+id/optionIV1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:background="@drawable/round_corner"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/optionTV2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:paddingStart="5dp"
                        android:textSize="15sp"
                        android:text="@string/Stretching"
                        android:textColor="@color/colorWhite" />

                    <ImageView
                        android:id="@+id/optionIV2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:scaleType="fitCenter" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/option3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/round_corner"
                    android:orientation="vertical"
                    android:onClick="onClick"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/optionTV3"
                        android:layout_width="match_parent"
                        android:text="@string/Function_Mobility"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:paddingStart="5dp"
                        android:textSize="15sp"
                        android:background="@color/colorAccent"/>
                    <ImageView
                        android:id="@+id/optionIV3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/option4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_corner"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:onClick="onClick"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/optionTV4"
                        android:layout_width="match_parent"
                        android:text="@string/Mind_exercise"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:paddingStart="5dp"
                        android:textSize="15sp"
                        android:background="@color/colorAccent"/>
                    <ImageView
                        android:id="@+id/optionIV4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:scaleType="fitCenter"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/option5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner"
                    android:onClick="onClick"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/optionTV5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:paddingStart="5dp"
                        android:text="@string/Function_Mobility"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/optionIV5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:scaleType="fitCenter" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner"
                    android:onClick="onClick"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/optionTV6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:paddingStart="5dp"
                        android:text="@string/Mind_exercise"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/optionIV6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:scaleType="fitCenter" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.0"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/option7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner"
                    android:onClick="onClick"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/optionTV7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:paddingStart="5dp"
                        android:text="@string/Function_Mobility"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/optionIV7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:scaleType="fitCenter" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
</LinearLayout>